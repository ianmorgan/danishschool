<h2>Content pages</h2>

<table>
  <tr>
    <th>Page Name</th>
    <th>Description</th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%=h page.page %></td>
    <td><%=h page.description%></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
   </tr>
<% end %>
</table>

<br/>

<%= link_to 'New page', new_page_path %>